<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="client_action" model="ir.actions.act_window">
        <field name="name">Clients</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hotel.client</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new reservation
            </p>
        </field>
    </record>
    <menuitem id="hotel_root"
            name="Hotel"
            sequence="3"
            action="client_action"/>

    <menuitem id="hotel_res_menu"
        name="Reservation"
        parent="hotel_root"
        sequence="2"
        action="client_action"/>



    <record id="folio_action" model="ir.actions.act_window">
        
    </record>
    <menuitem id="hotel_all_folio"
        name="All Folio"
        parent="hotel_root"
        sequence="3"
        action="folio_action"
        />

    
    <menuitem id="hotel_restaurant"
        name="Restaurant"
        parent="hotel_root"
        sequence="4"
        action="folio_action"
        />

    
    <menuitem id="hotel_house_keeping"
        name="Housekeeping"
        parent="hotel_root"
        sequence="5"
        action="folio_action"
        />




    <record id="hotel_report_actionn" model="ir.actions.act_window">

    </record>
    <menuitem id="hotel_report"
        name="Reports"
        parent="hotel_root"
        sequence="6"
        action="hotel_report_actionn"
        />



    <menuitem id="hotel_agent_commission"
        name="Agent Commission"
        parent="hotel_root"
        sequence="7"
        action="folio_action"
        />


    <menuitem id="hotel_configuration"
        name="Configuration"
        parent="hotel_root"
        sequence="8"
        />

    <menuitem id="hotel_configuration_1"
        name="Configuration"
        parent="hotel_configuration"
        sequence="1"
        />
    <menuitem id="hotel_configuration_2"
        name="Configuration"
        parent="hotel_configuration_1"
        sequence="8"
        action="folio_action"
        />
</odoo>